{{define "content"}}

<div id="body">
{{if .myUser}}
	<p>You are currently logged in as {{.myUser.Displayname}} ({{.myUser.Username}})</p>
{{else}}
	<form action="" method="POST">
		Username <input type="text" name="username"><br>
		Password <input type="password" name="password"><br>
		<input type="submit">
	</form>
{{end}}
</div>
<style>
	#body {
		margin: 15px;
	}
</style>
{{end}}
